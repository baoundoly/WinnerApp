        <Label Name="lblWinnerName" Content="Winner: " Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Margin="287,179,0,0" Foreground="#FFE60000" Grid.Column="1"/>
    </Grid>
